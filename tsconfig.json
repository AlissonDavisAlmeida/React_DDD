{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "rootDir": "./src",
        "baseUrl": "./src",
        "allowJs": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "@/*": [
                "*"
            ],
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}